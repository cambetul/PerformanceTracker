@model PerformanceTracker.ViewModels.CreateGroup

@{
    ViewData["Title"] = "CreateGroup";
}

<h1>Create Group</h1>
<hr />

<div class="row">
    <form asp-action="CreateGroup" method="post">
        <div class="form-group">
            <label asp-for="Title" class="control-label"></label>
            <input required asp-for="Title" class="form-control" type="text" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="form-group">
            <select class="form-select" multiple data-mdb-filter="true" asp-for="SelectedUsersIds">
                @foreach (var u in Model.Users)
                {
                    <option value="@u.Id">@u.FirstName @u.LastName - @u.Email</option>
                }
            </select>
        </div>
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" style="width:500px;" />
        </div>


        @if (ViewBag.Error != null)
        {
            <div class="alert alert-warning" role="alert">
                @ViewBag.Error
            </div>
        }
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
